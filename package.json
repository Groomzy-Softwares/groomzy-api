{
  "name": "groomzy-api",
  "version": "1.0.0",
  "description": "The Groomzy API",
  "main": "index.ts",
  "repository": "git@github.com:Groomzy-Softwares/groomzy-api.git",
  "author": "Sifiso <myezasifiso11@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r dotenv/config src/index.ts",
    "dev": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "lint": "prettier --check .",
    "lint:format": "prettier --write .",
    "prisma:create": "npx prisma",
    "prisma:init": "npx prisma init",
    "prisma:format": "npx prisma format",
    "prisma:migrate:init": "npx prisma migrate dev --name init",
    "prisma:migrate:update": "prisma migrate dev --name modified"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:format && yarn prisma:format && git add -A ."
    }
  },
  "dependencies": {
    "@cmdotcom/text-sdk": "1.3.4",
    "@prisma/client": "^2.26.0",
    "@types/bcrypt": "3.0.1",
    "bcrypt": "5.0.1",
    "dotenv": "8.2.0",
    "graphql-yoga": "1.18.3",
    "isemail": "3.2.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "nodemailer": "^6.5.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "8.5.1",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.35",
    "@types/nodemailer": "6.4.1",
    "graphql-tools": "7.0.4",
    "husky": "4",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "prisma": "^2.26.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
}
